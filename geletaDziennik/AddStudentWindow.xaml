<Window x:Class="geletaDziennik.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Ucznia" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="PESEL:"/>
            <TextBox Name="PeselTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Imię:"/>
            <TextBox Name="ImieTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Nazwisko:"/>
            <TextBox Name="NazwiskoTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Klasa ID:"/>
            <TextBox Name="KlasaIdTextBox" Margin="0,0,0,10"/>
            <Button Content="Dodaj" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>