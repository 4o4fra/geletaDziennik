<Window x:Class="geletaDziennik.OknoUcznia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno Ucznia" Height="450" Width="800"
        Background="#333333" Foreground="#FFFFFF">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="BorderBrush" Value="#444444"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <TextBlock Name="StudentInfoTextBlock" Margin="10"/>
        <DataGrid Name="StudentGradesDataGrid" AutoGenerateColumns="True" Margin="10,40,10,10"/>
    </Grid>
</Window>